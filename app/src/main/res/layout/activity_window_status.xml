<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.WindowStatusActivity">

    <Button
        android:id="@+id/bt_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/fragment_two" />

    <com.hans.constraint.View.LineTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="设置背景框"
        android:textColor="@color/black_33"
        android:textSize="16sp" />

    <com.hans.constraint.View.FlowViewGroup
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"/>

    <com.hans.constraint.View.HorizontalView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/blue_light"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:background="@color/red"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"/>
    </com.hans.constraint.View.HorizontalView>
</LinearLayout>